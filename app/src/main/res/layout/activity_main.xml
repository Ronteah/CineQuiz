<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_blue"
    tools:context=".MainActivity">

    <include layout="@layout/banner" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_marginTop="91dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            tools:ignore="UselessParent">

            <ScrollView
                android:id="@+id/scrollView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/btnEasy"
                            android:scaleType="centerCrop"
                            android:layout_width="match_parent"
                            android:layout_height="145dp"
                            android:layout_marginTop="13dp"
                            android:layout_weight="0.1"
                            android:background="#00FFFFFF"
                            app:srcCompat="@drawable/btn_easy" />

                        <ImageButton
                            android:id="@+id/btnMedium"
                            android:scaleType="centerCrop"
                            android:layout_width="match_parent"
                            android:layout_height="145dp"
                            android:layout_marginTop="15dp"
                            android:layout_weight="0.1"
                            android:background="#00FFFFFF"
                            app:srcCompat="@drawable/btn_medium" />

                        <ImageButton
                            android:id="@+id/btnHard"
                            android:scaleType="centerCrop"
                            android:layout_width="match_parent"
                            android:layout_height="145dp"
                            android:layout_marginTop="15dp"
                            android:layout_weight="0.1"
                            android:background="#00FFFFFF"
                            app:srcCompat="@drawable/btn_hard" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/Univ"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_marginStart="20dp"
                            android:fontFamily="sans-serif-black"
                            android:text="@string/universes"
                            android:textAlignment="textStart"
                            android:textColor="#FFFFFF"
                            android:textSize="24sp"
                            android:textStyle="italic" />

                        <ImageButton
                            android:id="@+id/btnMarvel"
                            android:scaleType="centerCrop"
                            android:layout_width="match_parent"
                            android:layout_height="145dp"
                            android:layout_weight="0.1"
                            android:layout_marginTop="15dp"
                            android:background="#00FFFFFF"
                            app:srcCompat="@drawable/marvel" />

                        <ImageButton
                            android:id="@+id/btnDC"
                            android:scaleType="centerCrop"
                            android:layout_width="match_parent"
                            android:layout_height="145dp"
                            android:layout_weight="0.1"
                            android:layout_marginTop="15dp"
                            android:background="#00FFFFFF"
                            app:srcCompat="@drawable/dc" />

                    </LinearLayout>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="15dp" />

                </LinearLayout>
            </ScrollView>

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:alpha="0.2"
                app:srcCompat="@drawable/swipe" />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>