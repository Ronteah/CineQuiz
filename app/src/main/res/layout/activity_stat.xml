<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_blue"
    tools:context=".StatActivity">

    <include layout="@layout/banner" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_marginTop="91dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:alpha="0.2"
                android:rotationY="180"
                app:srcCompat="@drawable/swipe" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="85dp"
                        android:layout_margin="5dp">

                        <ImageView
                            android:id="@+id/textStat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:padding="20dp"
                            android:textAlignment="center"
                            tools:ignore="MissingConstraints"
                            tools:srcCompat="@drawable/statistiques" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/layout_bg"
                        android:orientation="vertical">

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="15dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <Space
                                android:layout_width="10dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/textView2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="@string/moyenne_par_quiz"
                                    android:textAlignment="center"
                                    android:textColor="#FFFFFF" />

                                <TextView
                                    android:id="@+id/mean"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="sans-serif-black"
                                    android:text="6.7/10"
                                    android:textAlignment="center"
                                    android:textColor="#FFEB3B"
                                    android:textSize="20sp"
                                    android:textStyle="italic" />

                            </LinearLayout>

                            <Space
                                android:layout_width="15dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/textView3"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="@string/nombre_de_10_10"
                                    android:textAlignment="center"
                                    android:textColor="#FFFFFF" />

                                <TextView
                                    android:id="@+id/nbPerfect"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="sans-serif-black"
                                    android:text="1"
                                    android:textAlignment="center"
                                    android:textColor="#FFEB3B"
                                    android:textSize="20sp"
                                    android:textStyle="italic" />

                            </LinearLayout>

                            <Space
                                android:layout_width="10dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1" />

                        </LinearLayout>

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="15dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="20dp"
                            android:fontFamily="sans-serif-black"
                            android:text="@string/oscars"
                            android:textAlignment="center"
                            android:textColor="#FFFFFF"
                            android:textSize="24sp"
                            android:textStyle="italic" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-black"
                            android:text="Total = 12"
                            android:textAlignment="center"
                            android:textColor="#FEEA3B"
                            android:textSize="16sp"
                            android:textStyle="italic" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="15dp"
                                android:background="@drawable/layout_bg"
                                android:orientation="vertical">

                                <Space
                                    android:layout_width="match_parent"
                                    android:layout_height="15dp" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:fontFamily="sans-serif-black"
                                        android:text="@string/normal"
                                        android:textAlignment="center"
                                        android:textColor="#FFFFFF"
                                        android:textSize="18sp"
                                        android:textStyle="italic" />

                                    <Space
                                        android:layout_width="15dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1" />

                                    <TextView
                                        android:id="@+id/nbNormal"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginEnd="30dp"
                                        android:layout_weight="1"
                                        android:fontFamily="sans-serif-black"
                                        android:text="1"
                                        android:textAlignment="textEnd"
                                        android:textColor="#FFEB3B"
                                        android:textSize="20sp"
                                        android:textStyle="italic" />

                                </LinearLayout>

                                <Space
                                    android:layout_width="match_parent"
                                    android:layout_height="15dp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="15dp"
                                android:background="@drawable/layout_bg"
                                android:orientation="vertical">

                                <Space
                                    android:layout_width="match_parent"
                                    android:layout_height="15dp" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:fontFamily="sans-serif-black"
                                        android:text="@string/blindtest"
                                        android:textAlignment="center"
                                        android:textColor="#FFFFFF"
                                        android:textSize="18sp"
                                        android:textStyle="italic" />

                                    <Space
                                        android:layout_width="15dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1" />

                                    <TextView
                                        android:id="@+id/nbBlindtest"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginEnd="30dp"
                                        android:layout_weight="1"
                                        android:fontFamily="sans-serif-black"
                                        android:text="1"
                                        android:textAlignment="textEnd"
                                        android:textColor="#FFEB3B"
                                        android:textSize="20sp"
                                        android:textStyle="italic" />

                                </LinearLayout>

                                <Space
                                    android:layout_width="match_parent"
                                    android:layout_height="15dp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="15dp"
                                android:background="@drawable/layout_bg"
                                android:orientation="vertical">

                                <Space
                                    android:layout_width="match_parent"
                                    android:layout_height="15dp" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:fontFamily="sans-serif-black"
                                        android:text="@string/image"
                                        android:textAlignment="center"
                                        android:textColor="#FFFFFF"
                                        android:textSize="18sp"
                                        android:textStyle="italic" />

                                    <Space
                                        android:layout_width="15dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1" />

                                    <TextView
                                        android:id="@+id/nbImage"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginEnd="30dp"
                                        android:layout_weight="1"
                                        android:fontFamily="sans-serif-black"
                                        android:text="1"
                                        android:textAlignment="textEnd"
                                        android:textColor="#FFEB3B"
                                        android:textSize="20sp"
                                        android:textStyle="italic" />

                                </LinearLayout>

                                <Space
                                    android:layout_width="match_parent"
                                    android:layout_height="15dp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="15dp"
                                android:background="@drawable/layout_bg"
                                android:orientation="vertical">

                                <Space
                                    android:layout_width="match_parent"
                                    android:layout_height="15dp" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:fontFamily="sans-serif-black"
                                        android:text="@string/movie_line"
                                        android:textAlignment="center"
                                        android:textColor="#FFFFFF"
                                        android:textSize="18sp"
                                        android:textStyle="italic" />

                                    <Space
                                        android:layout_width="15dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1" />

                                    <TextView
                                        android:id="@+id/nbReplique"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginEnd="30dp"
                                        android:layout_weight="1"
                                        android:fontFamily="sans-serif-black"
                                        android:text="1"
                                        android:textAlignment="textEnd"
                                        android:textColor="#FFEB3B"
                                        android:textSize="20sp"
                                        android:textStyle="italic" />

                                </LinearLayout>

                                <Space
                                    android:layout_width="match_parent"
                                    android:layout_height="15dp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="15dp"
                                android:background="@drawable/layout_bg"
                                android:orientation="vertical">

                                <Space
                                    android:layout_width="match_parent"
                                    android:layout_height="15dp" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:fontFamily="sans-serif-black"
                                        android:text="@string/celebrity"
                                        android:textAlignment="center"
                                        android:textColor="#FFFFFF"
                                        android:textSize="18sp"
                                        android:textStyle="italic" />

                                    <Space
                                        android:layout_width="15dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1" />

                                    <TextView
                                        android:id="@+id/nbCelebrity"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginEnd="30dp"
                                        android:layout_weight="1"
                                        android:fontFamily="sans-serif-black"
                                        android:text="1"
                                        android:textAlignment="textEnd"
                                        android:textColor="#FFEB3B"
                                        android:textSize="20sp"
                                        android:textStyle="italic" />

                                </LinearLayout>

                                <Space
                                    android:layout_width="match_parent"
                                    android:layout_height="15dp" />

                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </ScrollView>

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:alpha="0"
                app:srcCompat="@drawable/swipe" />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>